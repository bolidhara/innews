<div class="main-content">


<!-- World Sports Section -->
<div class="news-section">
    <h2>दुनिया से खेल</h2>
    <div id="world-sports" class="news-list">
        <!-- यहां खबरें लोड होंगी -->
    </div>
    <a href="#" class="load-more" id="load-sports" onclick="loadMoreNews('sports')">और खबरें लोड करें</a>
</div>

<script>
    // स्टेटिक डेटा (इसे API से बदल सकते हैं)
    const worldNewsData = {
        sports: [
            { title: "दुनिया से खेल 1", content: "यह खेल समाचार का विवरण है।", image: "sports1.jpg" },
            { title: "दुनिया से खेल 2", content: "यह खेल समाचार का विवरण है।", image: "sports2.jpg" },
            { title: "दुनिया से खेल 3", content: "यह खेल समाचार का विवरण है।", image: "sports3.jpg" },
            { title: "दुनिया से खेल 4", content: "यह खेल समाचार का विवरण है।", image: "sports4.jpg" },
            { title: "दुनिया से खेल 5", content: "यह खेल समाचार का विवरण है।", image: "sports5.jpg" },
            { title: "दुनिया से खेल 6", content: "यह खेल समाचार का विवरण है।", image: "sports6.jpg" },
            { title: "दुनिया से खेल 7", content: "यह खेल समाचार का विवरण है।", image: "sports7.jpg" },
            { title: "दुनिया से खेल 8", content: "यह खेल समाचार का विवरण है।", image: "sports8.jpg" }
        ]
    };

    let sportsPage = 1;

    // खबरें लोड करने का कार्य
    function loadMoreNews(section) {
        let data = worldNewsData[section];
        let page = sportsPage;
        let start = (page - 1) * 5;
        let end = start + 5;
        let newsToLoad = data.slice(start, end);

        // HTML में खबरें जोड़ना
        newsToLoad.forEach(news => {
            const newsHtml = `
                <div class="post">
                    <img src="${news.image}" alt="${news.title}" class="news-image">
                    <h3>${news.title}</h3>
                    <p>${news.content}</p>
                </div>
            `;
            document.getElementById(`${section}`).insertAdjacentHTML('beforeend', newsHtml);
        });

        // अगला पेज बढ़ाना
        sportsPage++;

        // अगर सभी खबरें लोड हो चुकी हैं तो "और खबरें लोड करें" बटन हटा देना
        if ((page * 5) >= data.length) {
            document.getElementById(`load-${section}`).style.display = 'none';
        }
    }

    // पेज लोड होते ही पहली बार खबरें लोड करना
    window.onload = function() {
        loadMoreNews('sports');
    };
</script>

